					</view>
				</view>


			</view>



		</view>





		<view class="logbox2 m-t-40">


			<view>


				<view class="login1-phone df">
					<view class="log-icon1 ccc">
						<view class="m-l-20 ccc">
							<van-icon name="phone-o" />
						</view>
					</view>
					<view class="df a-center  login1-text ">验证码</view>

						<view class="m-l-20 ccc">
							<van-icon name="phone-o" />
						</view>
					</view>
					<view class="df a-center login1-text">手机号</view>
					<view class="ccc m-l-20">:</view>
					<view class="">
						<input class=" " type="number" bindblur="getValue1" value="{{value1}}" placeholder-class="phone-input" placeholder="请输入手机号"></input>
					</view>
				</view>


				<view class="login1-password m-t-30 df">
					<view class="log-icon1 ccc">
						<view class="m-l-20 ccc">
							<van-icon name="coupon-o" />
						</view>
					</view>
					<view class="df a-center login1-text ">密码</view>
